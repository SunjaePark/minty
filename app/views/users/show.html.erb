<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>
<p>
	<b>Description:</b>
	<%= @user.description %>
</p>
<p>
	<b>Tweets:</b>
	<%= @user.tweets.count %>
</p>
<p>
  <b>followings: <%= @user.followings.count %></b>
  <% @user.followings.each do |following| %>
  <br><%= following.name %>
  <% end %>
</p>

<p>
  <b>followers: <%= @user.followers.count %></b>
  <% @user.followers.each do |follower| %>
  <br><%= follower.name %>
  <% end %>
</p>


